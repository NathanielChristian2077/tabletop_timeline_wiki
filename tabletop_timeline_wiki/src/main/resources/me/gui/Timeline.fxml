<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="me.gui.controladores.ControladorTimeline">
    <!-- Top navigation bar for floating buttons -->
    <top>
        <HBox fx:id="navButtonsBox" spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="btnBack" text="Back" />
            <Button fx:id="btnReturnToRoot" text="Return to Campaign Root" />
        </HBox>
    </top>

    <!-- Sidebar with treeview -->
    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TreeView fx:id="treeView" VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <!-- Central area for graph visualization -->
    <center>
        <AnchorPane fx:id="graphPane" prefHeight="400" prefWidth="600" />
    </center>
</BorderPane>